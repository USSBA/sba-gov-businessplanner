<% include ../partials/header %>

<!--Show an individual plan-->

<div class="ui container">
    
    <h4 class="ui horizontal divider header">
      Create a New Business Plan
    </h4>
    <p>Please fill in your answers below to generate a business plan.</p>
    <h4 class="ui horizontal divider header">
      <i class="briefcase icon"></i>
      Your Answers
    </h4>
      <form action="/plans" class="ui form" method="POST">
        <table class="ui definition table">
          <tbody>
            <tr>
              <td class="six wide column">What is the Company's Name?</td>
              <td>
                <div class="ui fluid input">
                  <input type="text" name="plan[company_name]">
                </div>
              </td>
            </tr>
            <tr>
              <td>Who is the primary Business Owner?</td>
              <td>
                <div class="ui fluid input">
                  <input type="text" name="plan[owner_name]">
                </div>
              </td>
            </tr>        
            <tr>
              <td>In what City will the company be?</td>
              <td>
                <div class="ui fluid input">
                  <input type="text" name="plan[city]">
                </div>
              </td>
            </tr>
            <tr>
              <td>In what State will the company be?</td>
              <td>
                <div class="ui fluid input">
                  <input type="text" name="plan[state]">
                </div>
              </td>
            </tr>        
            <tr>
              <td>What will the company's Zipcode be?</td>
              <td>
                <div class="ui fluid input">
                  <input type="text" name="plan[zip_code]" pattern="[0-9]{5}" title="Five digit zip code">
                </div>
              </td>
            </tr>
            <tr>
              <td>What products or services will the company offer?</td>
              <td>
                <div class="ui fluid input">
                  <input type="text" name="plan[product_or_service]">
                </div>
              </td>
            </tr>        
            <tr>
              <td>Who are your Target Customers?</td>
              <td>
                <div class="ui fluid input">
                  <input type="text" name="plan[target_customers]">
                </div>
              </td>
            </tr>
            <tr>
              <td>What are the Company's Goals?</td>
              <td>
                <div class="ui fluid input">
                  <input type="text" name="plan[goals]">
                </div>
              </td>
            </tr>        
            <tr>
              <td>What is the company's Mission Statement?</td>
              <td>
                <div class="ui fluid input">
                  <input type="text" name="plan[mission_statement]">
                </div>
              </td>
            </tr>
            <tr>
              <td>Who are the company's Principal Members?</td>
              <td>
                <div class="ui fluid input">
                  <input type="text" name="plan[principal_members]">
                </div>
              </td>
            </tr>        
            <tr>
              <td>What is the company's Legal Structure?</td>
              <td>
                <div class="ui fluid input">
                  <input type="text" name="plan[legal_structure]">
                </div>
              </td>
            </tr>
            <tr>
              <td>What Industry is the company in?</td>
              <td>
                <div class="ui fluid input">
                  <input type="text" name="plan[industry_description]">
                </div>
              </td>
            </tr>        
            <tr>
              <td>Who are your Customers?</td>
              <td>
                <div class="ui fluid input">
                  <input type="text" name="plan[customers]">
                </div>
              </td>
            </tr>
            <tr>
              <td>Who are your Competitors?</td>
              <td>
                <div class="ui fluid input">
                  <input type="text" name="plan[competitors]">
                </div>
              </td>
            </tr>        
            <tr>
              <td>What Advantages do you have over Competition?</td>
              <td>
                <div class="ui fluid input">
                  <input type="text" name="plan[advantages_over_competition]">
                </div>
              </td>
            </tr>
            <tr>
              <td>What are the Relevant Regulations that apply to your company?</td>
              <td>
                <div class="ui fluid input">
                  <input type="text" name="plan[regulations]">
                </div>
              </td>
            </tr>        
            <tr>
              <td>What products or services will the company offer?</td>
              <td>
                <div class="ui fluid input">
                  <input type="text" name="plan[company_productservice]">
                </div>
              </td>
            </tr>
            <tr>
              <td>What will the pricing structure for those things be?</td>
              <td>
                <div class="ui fluid input">
                  <input type="text" name="plan[pricing_structure]">
                </div>
              </td>
            </tr>        
            <tr>
              <td>What part of the development life cycle is your product in?</td>
              <td>
                <div class="ui fluid input">
                  <input type="text" name="plan[life_cycle]">
                </div>
              </td>
            </tr>
            <tr>
              <td>Does your company own any Intellectual Property Rights?</td>
              <td>
                <div class="ui fluid input">
                  <input type="text" name="plan[intellectual_property]">
                </div>
              </td>
            </tr>        
            <tr>
              <td>Will your company be involved in Research and Development?</td>
              <td>
                <div class="ui fluid input">
                  <input type="text" name="plan[research_and_development]">
                </div>
              </td>
            </tr>
            <tr>
              <td>What is your Growth Plan?</td>
              <td>
                <div class="ui fluid input">
                  <input type="text" name="plan[plan_to_grow]">
                </div>
              </td>
            </tr>        
            <tr>
              <td>What is your Communication Plan?</td>
              <td>
                <div class="ui fluid input">
                  <input type="text" name="plan[plan_to_communicate]">
                </div>
              </td>
            </tr>
            <tr>
              <td>What is your Sales Plan?</td>
              <td>
                <div class="ui fluid input">
                  <input type="text" name="plan[plan_to_sell]">
                </div>
              </td>
            </tr>        
          </tbody>
        </table>
        <button class="ui large blue button" type="submit">Save Answers</button>
      </form>
</div>

<% include ../partials/footer %>