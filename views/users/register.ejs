<% include ../partials/header %>

<div class="ui container">
  <div class="ui middle aligned center aligned grid">
    <div class="six wide column">
      
      <h2 class="ui blue image header">
        <div class="content">
          Create an account
        </div>
      </h2>
      <form class="ui large form" action="/users/new" method="POST">
        <div class="ui stacked segment">
          <div class="field">
            <div class="ui left icon input">
              <i class="user icon"></i>
              <input type="email" name="username" placeholder="Email address">
            </div>
          </div>
          <div class="field">
            <div class="ui left icon input">
              <i class="lock icon"></i>
              <input type="password" name="password" placeholder="Password" pattern=".{8,20}" required title="8 to 20 characters">
            </div>
          </div>
          <button class="ui fluid large blue submit button">Register</button>
        </div>
        
        <div class="ui error message"></div>
  
      </form>
  
      <div class="ui message">
        Already have an account? <a href="/users/login">Login</a>
      </div>
      
    </div>
  </div>
</div>

<% include ../partials/footer %>